<style>
  :root {
    --paper: #120f0d;
    --ink: #ffffe3;
    --speed: 0.33s;
    --ease: cubic-bezier(0.415, 0.595, 0.32, 0.915);
  }
  h4{
    text-decoration: underline;
  }

  .hover-effect-list {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-bottom: -1px;
  }

  .hover-effect-list a {
    display: block;
    width: 100%;
    padding: 20px;
    color: var(--ink);
    transition:
      color var(--speed),
      background-position var(--speed);
    font-size: 3rem;
    border-bottom: 1px solid #666653;
    background: linear-gradient(
      to bottom,
      var(--paper) 0%,
      var(--paper) 50%,
      var(--ink) 50%
    );
    background-size: 100% 200%;
    background-position: 0 0;
    text-decoration: underline;
    text-decoration-thickness: 1px; /* Adjust the thickness as needed */
    text-underline-offset: 4px; /* Adjust the offset as needed */
  }

  /* .hover-effect-list a:last-child {
    border-bottom: 1px solid #666653;
  } */

  .hover-effect-list a:hover,
  .hover-effect-list a:focus {
    color: var(--paper);
    background-position: 0 100%;
  }

  .hover-effect-list a::after {
    content: "➔";
    position: absolute;
    text-decoration: none;
    margin-left: 10px;
  }
</style>
